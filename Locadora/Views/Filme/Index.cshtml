@model IEnumerable<Locadora.Models.Filme>

@{
    ViewData["Title"] = "Filme";
}

<h2>Filme</h2>

<p>
    <a asp-action="Create">Cadastrar Filme</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.CheckBox("teste", new {value = item.FilmeId, @checked = false })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FilmeId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.FilmeId">Detalhar</a> |
                <a asp-action="Delete" asp-route-id="@item.FilmeId">Deletar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
