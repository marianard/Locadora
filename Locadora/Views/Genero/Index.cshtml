@model IEnumerable<Locadora.Models.Genero>

@{
    ViewData["Title"] = "Gênero";
}

<h2>Gênero</h2>

<p>
    <a asp-action="Create">Cadastrar Gênero</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GeneroId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.GeneroId">Detalhar</a> |
                <a asp-action="Delete" asp-route-id="@item.GeneroId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
